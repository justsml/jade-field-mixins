//- Base field with a label
//- 
//- Used inside '.form-horizontal' to display a label left of the field
//- 
//- Accepted arguments:
//- * label (String)
//- * field args (type, name, value, placeholder)

include field

mixin labelled-field(args)
	.form-group
		label(for=attributes.id ? attributes.id : null).col-sm-3= args.label
		.col-sm-9
			+field(args)(id=attributes.id, class=attributes.class)
			if args.note
				.form-info= args.note
